<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.example.android.camera2basic.AutoFitTextureView
        android:id="@+id/texture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <EditText
        android:id="@+id/hostAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@color/control_background"
        android:ems="10"
        android:inputType="number|numberDecimal"
        android:text="@string/hostAddressString"
        android:textAlignment="center" />

    <FrameLayout
        android:id="@+id/control"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="@dimen/margin_large"
        android:visibility="visible">

        <!--  <Button
            android:id="@+id/connect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:text="@string/connect" />-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/shotModeSpinner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/control"
                android:layout_alignParentStart="true"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@color/control_background"
                android:entries="@array/shooting_mode_array" />

            <Button
                android:id="@+id/picture"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:text="@string/picture" />

            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@color/control_background"
                android:text="enable ToF" />

        </LinearLayout>


    </FrameLayout>

    <SeekBar
        android:id="@+id/focusSeekBar"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/control"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:layout_marginHorizontal="@dimen/margin_large"
        android:background="@color/control_background"
        android:max="6"
        android:min="0"
        android:visibility="visible" />

    <Button
        android:id="@+id/autofocus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/focusSeekBar"
        android:layout_alignEnd="@+id/focusSeekBar"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:enabled="false"
        android:gravity="center"
        android:text="@string/autofocus" />

    <SeekBar
        android:id="@+id/exposureSeekBar"
        style="@android:style/Widget.Material.SeekBar.Discrete"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/focusSeekBar"
        android:layout_marginBottom="250dp"
        android:layout_marginHorizontal="@dimen/margin_medium"
        android:background="@color/control_background"
        android:max="4"
        android:min="0"
        android:paddingLeft="0dp"
        android:rotation="270"
        android:translationX="-175dp"
        android:visibility="visible" />

</RelativeLayout>
